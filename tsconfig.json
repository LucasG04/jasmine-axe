{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["es6", "dom"],
        "strict": true,
        "outDir": "./dist",
        "alwaysStrict": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "types": [],
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
